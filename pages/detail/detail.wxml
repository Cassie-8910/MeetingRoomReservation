<view class="section">
  <picker mode="selector" range="{{rooms}}" range-key="name" bindchange="handleRoomChange" value="name" >
    <view class="picker" >
    {{roomCurrent}}  <i-icon type="unfold"  size="20" /> 
    </view>
  </picker>
</view>

<view class="container">
  <view>{{ year }} - {{ month }} - {{ day }}</view>
  <view>预约情况</view>
</view>

  <view>
    <i-steps direction="vertical">
    <i-step status="process" icon="barrage">
        <view slot="title">
              9:00 - 11:00
        </view>
        <view slot="content">
            已被预约
        </view>
    </i-step>
