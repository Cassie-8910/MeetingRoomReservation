            14:00 - 16:00
        </view>
        <view slot="content">
            空闲
        </view>
    </i-step>
    <i-step status="process" icon="barrage">
        <view slot="title">
          16:00 - 18:00
        </view>
        <view slot="content">
          已被预约
        </view>
    </i-step>
    <i-step status="waite" icon="barrage">
        <view slot="title">
          18:00 - 20:00
